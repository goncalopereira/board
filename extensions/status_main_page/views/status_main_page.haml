%html
	%head
		%title Current Status
	%body		
		%h2 Current Status

		%table
			%tbody
			- locals[:services].each do |service|
				%tr
					%td= service['description']
					%td
						%img{:src => "#{locals[:url]}#{service['current-event']['status']['image']}"}
					%td= service['current-event']['timestamp']
		
		%table
			%tbody				
			-locals[:statuses].each do |status|
				%tr
					%td= status['name']
					%td= status['description']
					%td
						%img{:src=> "#{locals[:url]}#{status['image']}"}
